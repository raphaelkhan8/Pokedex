{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "angular": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": ["react"],
    "rules": {
        // enable additional rules
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-cond-assign": ["error", "always"],
        "no-underscore-dangle": [
            "error",
            {
                "allow": ["_id"]
            }
        ],
        "import/extensions": [
            "error",
            {
                "jsx": "always",
                "json": "always"
            }
        ],
        "react/jsx-one-expression-per-line": 0,
        "class-methods-use-this": 0,
        "no-console": 0
    }
}
